{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "outDir": "dist",
    "lib": ["es6", "es7", "es2017"],
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
